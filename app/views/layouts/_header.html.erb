<header class="py-3 border-bottom" style="border-bottom: 2px solid #007bff; margin-bottom: 50px;">
  <div class="container d-flex justify-content-between align-items-center">
    <a class="navbar-brand" href="#">
      <%= image_tag '2.png', size: '190x120', class: 'd-inline-block align-top' %>
    </a>

    <!-- ナビゲーションリンク -->
    <div class="d-flex">
      <% if user_signed_in? %>
        <%= link_to "Log Out", destroy_user_session_path, method: :delete, class: "btn btn-outline-primary me-2" %>
      <% else %>
        <%= link_to "新規登録", new_user_registration_path, class: "btn btn-primary me-2" %>
        <%= link_to "ログイン", new_user_session_path, class: "btn btn-outline-secondary me-2" %>
        <% if admin_signed_in? %>
          <%= link_to "管理者ログイン", new_admin_session_path, class: "btn btn-outline-info" %>
        <% end %>
      <% end %>
    </div>
  </div>
</header>


