<header class="py-3 border-bottom" style="border-bottom: 2px solid #007bff; margin-bottom: 50px;">
  <div class="container d-flex justify-content-between align-items-center">
    <a class="navbar-brand" href="#">
      <%= image_tag '2.png', size: '190x120', class: 'd-inline-block align-top' %>
    </a>

    <!-- ナビゲーションリンク -->
    <div class="d-flex">
      <% if user_signed_in? %>
        <%= link_to user_path(current_user), class: "btn btn-outline-dark me-2 mr-3" do %>
        Mypage <i class="fa-solid fa-heart" style="color: #74C0FC;"></i>
        <% end %>
        <%= link_to  tweets_path, class: "btn btn-outline-dark me-2 mr-3" do %>
        頑張りをつぶやこう<i class="fa-regular fa-face-surprise"></i> <i class="fa-regular fa-comment-dots"></i>
        <% end %>
        <%= link_to destroy_user_session_path, method: :delete, class: "btn btn-outline-dark me-2" do %>
        Log Out <i class="fa-solid fa-right-from-bracket" style="color: #ff4b0f;"></i>
        <% end %>
      <% else %>
        <%= link_to "新規登録", new_user_registration_path, class: "btn btn-primary me-2" %>
        <%= link_to "ログイン", new_user_session_path, class: "btn btn-outline-secondary me-2" %>
        <% if admin_signed_in? %>
          <%= link_to "管理者ログイン", new_admin_session_path, class: "btn btn-outline-info" %>
        <% end %>
      <% end %>
    </div>
  </div>
</header>


