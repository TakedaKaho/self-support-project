<style>
  h2.text-center {
    font-size: 3rem; 
    color: #75A9FF; 
  }
  .btn-primary {
    background-color: #75A9FF; /* ボタンの背景色 */
    border-color: #75A9FF; /* ボタンのボーダー色 */
  }
</style>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2 class="text-center mb-4">今日の運動を記録する</h2>
      <div class="card">
        <div class="card-body">
          <%= form_with model: @exercise, local: true do |f| %>
            <div class="mb-3">
              <%= f.label :exercise_date, "記録日", class: "form-label" %>
              <div class="input-group">
                <%= f.date_field :exercise_date, value: Time.zone.today, class: "form-control" %>
              </div>
            </div>
            
            <div class="mb-3">
              <%= f.label :exercise_type, "運動内容", class: "form-label" %>
              <div class="input-group">
                <%= f.text_field :exercise_type, class: "form-control", placeholder: "例: ジョギング、筋トレ" %>
              </div>
            </div>
            
            <div class="mb-3">
              <%= f.label :time, "運動時間", class: "form-label" %>
              <div class="input-group">
                <%= f.number_field :time, step: 1, class: "form-control", placeholder: "例: 30" %>
                <%= f.select :time, options_for_select([['分', 'minutes'], ['時間', 'hours']]), {}, class: "form-select" %>
              </div>
            </div>
            
            <div class="mb-3">
              <%= f.label :notes, "メモ", class: "form-label" %>
              <div class="input-group">
                <%= f.text_area :notes, class: "form-control", placeholder: "例: スクワット３セット、辛くて２セット目で一回休憩した"  %>
              </div>
            </div>
            
            <div class="text-center">
              <%= f.submit "運動を記録", class: "btn btn-primary mt-4" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
  
