<h2 class="text-center">Sign up</h2>

<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-12 col-md-6 col-lg-4">

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <%= f.input :email, autofocus: true, input_html: { autocomplete: 'email' }, label_html: { class: 'form-label' } %>

  <%= f.input :password, input_html: { autocomplete: 'new-password' }, label_html: { class: 'form-label' } %>
  
  <%= f.input :password_confirmation, input_html: { autocomplete: 'new-password' }, label_html: { class: 'form-label' } %>

  <div class="text-center">
    <%= f.button :submit, "Sign up", class: 'btn btn-primary' %>
  </div>
<% end %>

<%= render "public/shared/links" %>

</div>
</div>
</div>