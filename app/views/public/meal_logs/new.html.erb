<style>
  h2.text-center {
    font-size: 3rem; 
    color: #75A9FF; 
  }
  .btn-primary {
    background-color: #75A9FF; /* ボタンの背景色 */
    border-color: #75A9FF; /* ボタンのボーダー色 */
  }
</style>

<div class="container">
 <div class="row justify-content-center">
  <div class="col-md-6">
    <h2 class="text-center mb-4">今日の食事を記録する</h2>
    <div class="card">
     <div class="card-body">
      <%= form_with model: @meal_log, local: true do |f| %>
       <%= f.label :meal_date, "食事記録日", class: "form-label" %>
        <div class="input-group">
         <%= f.date_field :meal_date, class: "form-control" %>
        </div>
        <%= f.label :meal_type, "食事タイプ", class: "form-label" %>
        <div class="input-group">
         <%= f.number_field :meal_type, class: "form-control" %>
        </div>
        <%= f.label :food_name, "食べたもの", class: "form-label" %>
        <div class="input-group">
         <%= f.text_area :food_name, class: "form-control" %>
        </div>
        <%= f.label :amount, "数量", class: "form-label" %>
         <div class="input-group">
         <%= f.date_field :amount, class: "form-control" %>
        </div>
        <div class="text-center">
         <%= f.submit "食事を記録", class: "btn btn-primary mt-4" %>
        </div>
      <% end %>

     </div>
    </div>
  </div>
 </div>
</div>