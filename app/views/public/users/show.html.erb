<div class="container">
  
 <% if flash[:user_notice].present? %>
  <div class="alert alert-success">
    <%= flash[:user_notice] %>
  </div>
 <% end %>
  
  
  <div class="row">
    <!-- サイドバー -->
    <div class="col-md-3">
      
      <div class="card mb-3">
        <div class="card-header">
          <h4 class="mb-0">プロフィール</h4>
        </div>
        <div class="card-body">
          <p><strong>名前:</strong> <%= @user.name %></p>
          <p><strong>メール:</strong> <%= @user.email %></p>
          <p><strong>紹介文:</strong> <%= @user.body.gsub(/\n/, '<br>').html_safe %></p>
          <%= link_to edit_user_path(current_user), class: "btn btn-outline-dark mb-2 w-100" do %>
          編集 <i class="fa-regular fa-pen-to-square"></i>
          <% end %>
        </div>
      </div>

      
       <div class="card mb-3">
        <div class="card-header">
          <h4 class="mb-0">食事記録</h4>
        </div>
        <div class="card-body text-center">
          <%= link_to "今日の食事を記録する", new_meal_log_path, class: "btn btn-primary mb-2 w-100" %>
          <%= link_to "過去の食事", meal_logs_path, class: "btn btn-secondary w-100" %>
        </div>
      </div>
      
      <div class="card mb-3">
        <div class="card-header">
          <h4 class="mb-0">運動記録</h4>
        </div>
        <div class="card-body text-center">
          <%= link_to "今日の運動を記録する", new_exercise_log_path, class: "btn btn-primary mb-2 w-100" %>
          <%= link_to "過去の運動",  exercise_logs_path, class: "btn btn-secondary w-100" %>
        </div>
      </div>
      
    </div>

    <!-- メインコンテンツ -->
    <div class="col-md-9">
      <div class="card mb-3">
        <div class="card-header">
          <h4 class="mb-0"><i class="fa-solid fa-medal" style="color: #f41a1a;"></i> <%= @new_goal.target_date.strftime('%Y年 %m月 %d日') %>までの目標</h4>
        </div>
        <div class="card-body">
          <% if @new_goal %>
            <ul class="list-unstyled">
              <li><strong>目標体重:</strong> <%= @new_goal.target_weight %> kg</li>
              <li><strong>目標体脂肪率:</strong> <%= @new_goal.target_body_fat %> %</li>
            </ul>
          <% else %>
            <p>まだ目標がありません。</p>
          <% end %>
        </div>
        <div class="card-footer text-center">
          <%= link_to "新しく目標を設定する", new_goal_path, class: "btn btn-primary me-2" %>
          <%= link_to "過去の目標", goals_path, class: "btn btn-secondary" %>
        </div>
      </div>
      
       <div class="card mb-3">
        <div class="card-header">
          <h4 class="mb-0">今日のタスク</h4>
        </div>
        <div class="card-body text-center">
          <%= link_to "今日のタスク作成", new_task_path, class: "btn btn-primary mb-2 w-100" %>
          <%= link_to "過去のタスク", tasks_path, class: "btn btn-secondary w-100" %>
        </div>
      </div>

      <div class="card mb-3">
        <div class="card-header">
          <h4 class="mb-0">今日のBodyLog</h4>
        </div>
        <div class="card-body text-center">
          <!-- 今日のBodyLogが登録されているかを判定 -->
          <% if  %>
            <!-- 登録されたBodyLogの内容を表示 -->
          <% else %>
            <p>今日はまだ登録ありません。</p>
          <% end %>
          <%= link_to "今日の記録を残す", new_body_log_path, class: "btn btn-primary me-2" %>
          <%= link_to "過去の自分の記録を見る", body_logs_path, class: "btn btn-secondary" %>
        </div>
      </div>

      <div class="card">
        <div class="card-header">
          <h2 class="mb-0">グラフ表示 <i class="fa-solid fa-arrow-trend-up" style="color: #63E6BE;"></i></h2>
        </div>
        <div class="card-body">
          <!-- グラフ表示の内容をここに追加 -->
        </div>
      </div>
    </div>
  </div>
</div>
