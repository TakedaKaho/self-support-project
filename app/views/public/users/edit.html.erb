<style>
  h2.text-center {
    font-size: 3rem; 
    color: #30F9B2; 
  }
  .btn-primary {
    background-color: #30F9B2;
    border-color: #30F9B2; 
  }
</style>

<div class="container">
  <h2 class="text-center p-3">P r o f i l e 編 集 画 面</h2>
  <%= form_with(model: @user, local: true, multipart: true) do |form| %>
    <div class="row justify-content-center mt-4">
      <div class="col-md-8 col-lg-6">
        <div class="form-group mb-4">
          <%= form.label :name, "名前", class: "form-label fw-bold" %>
          <%= form.text_field :name, class: "form-control", placeholder: "名前を入力してください" %>
        </div>
        <div class="form-group mb-4">
          <%= form.label :body, "自己紹介文", class: "form-label fw-bold" %>
          <%= form.text_area :body, class: "form-control", placeholder: "自己紹介文を入力してください", rows: 8, style: "resize: none; padding: 15px;" %>
        </div>
        <div class="text-center">
          <%= form.submit "変更保存", class: "btn btn-primary mt-4" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
