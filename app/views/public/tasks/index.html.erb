<style>
  h2.text-center {
    font-size: 3rem; 
    color: #75A9FF; 
  }

  .btn-primary {
    background-color: #75A9FF; /* ボタンの背景色 */
    border-color: #75A9FF; /* ボタンのボーダー色 */
  }

  }
</style>


<div class="container">
  <h2 class="text-center mb-4">過去のタスクを見直そう</h2>
  
  <div class="card mb-3">
    <div class="card-header">
      <h4 class="mb-0">タスク一覧</h4>
    </div>
    <div class="card-body">
      <% if @tasks.any? %>
        <ul class="list-group">
          <% @tasks.each do |task| %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <div>
                <%= task.detail %>
                <% if task.completed %>
                  <span class="badge bg-success">達成</span>
                <% else %>
                  <span class="badge bg-secondary">未達成</span>
                <% end %>
              </div>
              <div>
                <%= link_to '変更', update_status_task_path(task), method: :patch, class: "btn btn-sm btn-outline-primary" %>
              </div>
            </li>
          <% end %>
        </ul>
      <% else %>
        <p>タスクはありません。</p>
      <% end %>
    </div>
    <div class="card-footer text-center">
      <%= link_to "タスク作成", new_task_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>
